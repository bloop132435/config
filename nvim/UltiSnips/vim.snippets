snippet lua "Lua heredoc"
lua <<EOF
$0
EOF
endsnippet

snippet aug "autogroup"
augroup ${1:name}
	au!
	$0
augroup END
endsnippet

snippet fun "function" b
function! ${1:name}(${2:params}) abort
	${3:contents}
endfunction$0
endsnippet

snippet if "if"
if ${1:condition}
	${2:result}
endif$0
endsnippet
